{
  "compilerOptions": {
    "target": "esnext",
    "noEmit": false,
    "experimentalDecorators": true,
	"allowJs": false,
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
	"isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
	"noImplicitReturns": true,
	"noUnusedLocals": true
  },
  "include": [
	"src/**/*",
  ],
  "exclude": [
	  "node_modules",
	  "**/__tests__/",
	  "coverage"
	]
}